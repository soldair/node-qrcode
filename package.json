    "prepublish": "npm run build"
  },
  "bin": {
    "qrcode": "./bin/qrcode"
  },
  "dependencies": {
    "can-promise": "0.0.1",
    "dijkstrajs": "^1.0.1",
    "isarray": "^2.0.1",
