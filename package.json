{
  "name": "qrcode",
  "description": "QRCode / 2d Barcode api with both server side and client side support using canvas",
  "version": "0.5.0",
  "author": "Ryan Day <soldair@gmail.com>",
  "contributors": [
    "vigreco"
  ],
  "keywords": [
    "canvas",
    "qrcode",
    "barcode"
  ],
  "main": "./lib/index.js",
  "browser": "./lib/browser.js",
  "homepage": "http://github.com/soldair/node-qrcode",
  "scripts": {
    "lint": "standard",
    "pretest": "npm run lint",
    "test": "tap --cov --coverage-report=text --reporter classic 'lib/**/*.test.js'",
    "build": "node build.js",
    "prepublish": "npm run test && npm run build"
  },
  "bin": {
    "qrcode": "./bin/qrcode"
  },
  "dependencies": {
    "canvas": "~1.3.4",
    "colors": "*"
  },
  "devDependencies": {
    "browserify": "^13.1.1",
    "canvasutil": "*",
    "express": "2.5.x",
    "libxmljs": "^0.18.0",
    "standard": "*",
    "tap": "*",
    "uglify-js": "1.2.x"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/soldair/node-qrcode.git"
  },
  "engines": {
    "node": ">= 0.10"
  },
  "standard": {
    "ignore": [
      "build/",
      "examples/vendors/"
    ]
  }
}
