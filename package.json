{
  "name": "qrcode",
  "description": "QRCode / 2d Barcode api with both server side and client side support using canvas",
  "version": "0.5.0",
  "author": "Ryan Day <soldair@gmail.com>",
  "contributors": [
    "vigreco"
  ],
  "keywords": [
    "canvas",
    "qrcode",
    "barcode"
  ],
  "main": "./qrcode.js",
  "browser": "./lib/qrcode-draw.js",
  "homepage": "http://github.com/soldair/node-qrcode",
  "scripts": {
    "pretest": "standard && node build.js",
    "prepublish": "node build.js",
    "test": "tap test/url.js test/svg.js"
  },
  "bin": {
    "qrcode": "./bin/qrcode"
  },
  "dependencies": {
    "canvas": "~1.3.4",
    "colors": "*"
  },
  "devDependencies": {
    "browserify": "^13.1.1",
    "canvasutil": "*",
    "express": "2.5.x",
    "libxmljs": "^0.18.0",
    "standard": "^8.5.0",
    "tap": "*",
    "uglify-js": "1.2.x"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/soldair/node-qrcode.git"
  },
  "engines": {
    "node": ">= 0.10"
  },
  "standard": {
    "ignore": [
      "build/",
      "vendors/"
    ]
  }
}
